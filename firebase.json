{
  "hosting": {
    "public": "public",
    "rewrites": [
      {
        "source": "/auth",
        "function": "auth"
      },
      {
        "source": "/callback",
        "function": "callback"
      },
      {
        "source": "/graphql",
        "function": "graphql"
      },
      {
        "source": "/activate_charge",
        "function": "activate_charge"
      },
      {
        "source": "/webhook/uninstall",
        "function": "uninstall"
      },
      {
        "source": "/webhook/customer_redact",
        "function": "customer_redact"
      },
      {
        "source": "/webhook/customers_data_request",
        "function": "customers_data_request"
      },
      {
        "source": "/webhook/shop-redact",
        "function": "webhookShopRedact"
      }
    ]
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  }
}
